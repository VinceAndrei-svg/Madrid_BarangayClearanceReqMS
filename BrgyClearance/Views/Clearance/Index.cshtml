@model List<Proj1.Models.ViewModels.ClearanceRequestViewModel>

@{
    ViewData["Title"] = "Clearance Requests";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Clearance Requests Management</h2>
                <div>
                    <span class="badge bg-primary">Total: @Model.Count</span>
                    <span class="badge bg-warning text-dark">
                        Pending: @Model.Count(r => r.Status == "Submitted" || r.Status == "Pending")
                    </span>
                    <span class="badge bg-success">
                        Approved: @Model.Count(r => r.Status == "Approved")
                    </span>
                </div>
            </div>

            @if (Model.Count == 0)
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No clearance requests found.
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Reference</th>
                                        <th>Resident</th>
                                        <th>Type</th>
                                        <th>Purpose</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var request in Model.OrderByDescending(r => r.RequestDate))
                                    {
                                        <tr>
                                            <td>
                                                <small class="font-monospace">@request.ReferenceNumber</small>
                                            </td>
                                            <td>@request.ResidentName</td>
                                            <td>
                                                <span class="badge bg-secondary">@request.ClearanceTypeName</span>
                                            </td>
                                            <td>
                                                <small>@(request.Purpose.Length > 50 ? request.Purpose.Substring(0, 50) + "..." : request.Purpose)</small>
                                            </td>
                                            <td>
                                                <small>@request.RequestDate.ToLocalTime().ToString("MMM dd, yyyy")</small>
                                            </td>
                                            <td>
                                                @* 
                                                    LEARNING POINT #1: Status Badge Display
                                                    ========================================
                                                    We use the StatusBadgeClass property from the ViewModel which provides
                                                    Bootstrap CSS classes based on the status. This is cleaner than
                                                    repeating if-else logic in the view.
                                                *@
                                                <span class="badge @request.StatusBadgeClass">@request.Status</span>
                                            </td>
                                            <td class="text-end">
                                                @* 
                                                    LEARNING POINT #2: Action Buttons Based on Status
                                                    ==================================================
                                                    Different statuses require different actions:
                                                    - Submitted/Pending: Show Approve/Reject buttons
                                                    - Approved: Show Record Payment button
                                                    - ForRelease: Show Mark as Released button
                                                    - Rejected/Cancelled/Released/Expired: Show view details link only
                                                *@
                                                
                                                @if (request.Status == "Submitted" || request.Status == "Pending")
                                                {
                                                    @* Active requests that need processing *@
                                                    <div class="btn-group btn-group-sm" role="group">
                                                        <a asp-action="Approve" asp-route-id="@request.Id" 
                                                           class="btn btn-success" title="Approve">
                                                            <i class="bi bi-check-circle"></i> Approve
                                                        </a>
                                                        <a asp-action="Reject" asp-route-id="@request.Id" 
                                                           class="btn btn-danger" title="Reject">
                                                            <i class="bi bi-x-circle"></i> Reject
                                                        </a>
                                                    </div>
                                                }
                                                else if (request.Status == "Approved")
                                                {
                                                    @* 
                                                        FIX #1: Payment Button for Approved Requests
                                                        ============================================
                                                        OLD CODE: Just showed "Processed" text
                                                        NEW CODE: Shows actionable "Record Payment" button
                                                    *@
                                                    <form asp-action="RecordPayment" asp-route-id="@request.Id" 
                                                          method="post" class="d-inline" 
                                                          onsubmit="return confirm('Confirm payment of â‚±@request.Fee.ToString("N2")?');">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-sm btn-primary" title="Record Payment">
                                                            <i class="bi bi-cash"></i> Payment
                                                        </button>
                                                    </form>
                                                }
                                                else if (request.Status == "ForRelease")
                                                {
                                                    @* 
                                                        FIX #2: Release Button for Paid Requests
                                                        =========================================
                                                        OLD CODE: Missing entirely
                                                        NEW CODE: Shows "Mark as Released" button
                                                    *@
                                                    <form asp-action="MarkAsReleased" asp-route-id="@request.Id" 
                                                          method="post" class="d-inline"
                                                          onsubmit="return confirm('Mark clearance as released?');">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-sm btn-success" title="Mark as Released">
                                                            <i class="bi bi-file-earmark-check"></i> Release
                                                        </button>
                                                    </form>
                                                }
                                                else if (request.Status == "Rejected")
                                                {
                                                    @* 
                                                        FIX #3: Proper Display for Rejected Requests
                                                        =============================================
                                                        Shows red X with "Rejected" text instead of generic "Processed"
                                                    *@
                                                    <small class="text-danger">
                                                        <i class="bi bi-x-circle-fill"></i> Rejected
                                                    </small>
                                                }
                                                else if (request.Status == "Cancelled")
                                                {
                                                    @* 
                                                        FIX #4: Proper Display for Cancelled Requests
                                                        ==============================================
                                                        OLD CODE: Showed red X with "Processed" (confusing)
                                                        NEW CODE: Shows grey circle with "Cancelled" (clear)
                                                    *@
                                                    <small class="text-secondary">
                                                        <i class="bi bi-dash-circle-fill"></i> Cancelled
                                                    </small>
                                                }
                                                else if (request.Status == "Released")
                                                {
                                                    @* Completed successfully *@
                                                    <small class="text-success">
                                                        <i class="bi bi-check-circle-fill"></i> Released
                                                    </small>
                                                }
                                                else if (request.Status == "Expired")
                                                {
                                                    @* Expired clearance *@
                                                    <small class="text-dark">
                                                        <i class="bi bi-clock-history"></i> Expired
                                                    </small>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                @if (Model.Any(r => r.Status == "Approved" || r.Status == "Rejected" || r.Status == "Cancelled" || r.Status == "Released" || r.Status == "Expired"))
                {
                    <div class="mt-3">
                        <small class="text-muted">
                            <i class="bi bi-info-circle"></i> 
                            Processed requests are displayed for record-keeping purposes.
                        </small>
                    </div>
                }
            }
        </div>
    </div>
</div>
