@model List<Proj1.Models.ViewModels.ClearanceRequestViewModel>

@{
    ViewData["Title"] = "Clearance Requests";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Clearance Requests Management</h2>
                <div>
                    <span class="badge bg-primary">Total: @Model.Count</span>
                    <span class="badge bg-warning text-dark">
                        Pending: @Model.Count(r => r.Status == "Submitted" || r.Status == "Pending")
                    </span>
                    <span class="badge bg-success">
                        Approved: @Model.Count(r => r.Status == "Approved")
                    </span>
                </div>
            </div>

            @if (Model.Count == 0)
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No clearance requests found.
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Reference</th>
                                        <th>Resident</th>
                                        <th>Type</th>
                                        <th>Purpose</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var request in Model.OrderByDescending(r => r.RequestDate))
                                    {
                                        <tr>
                                            <td>
                                                <small class="font-monospace">@request.ReferenceNumber</small>
                                            </td>
                                            <td>@request.ResidentName</td>
                                            <td>
                                                <span class="badge bg-secondary">@request.ClearanceTypeName</span>
                                            </td>
                                            <td>
                                                <small>@(request.Purpose.Length > 50 ? request.Purpose.Substring(0, 50) + "..." : request.Purpose)</small>
                                            </td>
                                            <td>
                                                <small>@request.RequestDate.ToLocalTime().ToString("MMM dd, yyyy")</small>
                                            </td>
                                            <td>
                                                @if (request.Status == "Approved")
                                                {
                                                    <span class="badge bg-success">Approved</span>
                                                }
                                                else if (request.Status == "Rejected")
                                                {
                                                    <span class="badge bg-danger">Rejected</span>
                                                }
                                                else if (request.Status == "Pending")
                                                {
                                                    <span class="badge bg-warning text-dark">Pending</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-info text-dark">Submitted</span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                @if (request.Status == "Submitted" || request.Status == "Pending")
                                                {
                                                    <div class="btn-group btn-group-sm" role="group">
                                                        <a asp-action="Approve" asp-route-id="@request.Id" 
                                                           class="btn btn-success" title="Approve">
                                                            <i class="bi bi-check-circle"></i> Approve
                                                        </a>
                                                        <a asp-action="Reject" asp-route-id="@request.Id" 
                                                           class="btn btn-danger" title="Reject">
                                                            <i class="bi bi-x-circle"></i> Reject
                                                        </a>
                                                    </div>
                                                }
                                                else if (request.Status == "Approved")
                                                {
                                                    <small class="text-success">
                                                        <i class="bi bi-check-circle-fill"></i> Processed
                                                    </small>
                                                }
                                                else
                                                {
                                                    <small class="text-danger">
                                                        <i class="bi bi-x-circle-fill"></i> Processed
                                                    </small>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                @if (Model.Any(r => r.Status == "Approved" || r.Status == "Rejected"))
                {
                    <div class="mt-3">
                        <small class="text-muted">
                            <i class="bi bi-info-circle"></i> 
                            Processed requests are displayed for record-keeping purposes.
                        </small>
                    </div>
                }
            }
        </div>
    </div>
</div>