@model Proj1.Models.ViewModels.CancelRequestViewModel

@{
    ViewData["Title"] = "Cancel Request";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Cancel Clearance Request
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Warning Message -->
                    <div class="alert alert-warning" role="alert">
                        <strong>Warning:</strong> This action cannot be undone. Once cancelled, you will need to submit a new request.
                    </div>

                    <!-- Request Info -->
                    <div class="mb-4 p-3 bg-light rounded">
                        <p class="mb-1"><strong>Reference Number:</strong> @Model.ReferenceNumber</p>
                        <p class="mb-0 text-muted">You are about to cancel this clearance request.</p>
                    </div>

                    <!-- Form -->
                    <form asp-action="Cancel" method="post">
                        <input type="hidden" asp-for="RequestId" />
                        <input type="hidden" asp-for="ReferenceNumber" />

                        <div class="mb-3">
                            <label asp-for="Reason" class="form-label">
                                Reason for Cancellation <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="Reason" class="form-control" rows="4" 
                                      placeholder="Please provide a detailed reason for cancelling this request (minimum 10 characters)"></textarea>
                            <span asp-validation-for="Reason" class="text-danger"></span>
                            <small class="form-text text-muted">
                                This information helps us improve our services.
                            </small>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@Model.RequestId" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Go Back
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-x-circle"></i> Confirm Cancellation
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}